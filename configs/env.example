# Global Environment Configuration Example
# Copy this file to .env and update with your values

# Environment
NODE_ENV=production
ENVIRONMENT=production
DEBUG=false

# Domain
DOMAIN=razgazdayson.ru
FRONTEND_URL=https://razgazdayson.ru
API_URL=https://api.razgazdayson.ru
WEBAPP_URL=https://razgazdayson.ru/app

# Database
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=razgazdayson
POSTGRES_PASSWORD=your-secure-password
POSTGRES_DB=razgazdayson
DATABASE_URL=postgresql+asyncpg://razgazdayson:your-secure-password@postgres:5432/razgazdayson

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_URL=redis://:your-redis-password@redis:6379/0

# Security
SECRET_KEY=your-very-long-random-secret-key
JWT_SECRET_KEY=your-jwt-secret-key
WEBHOOK_SECRET=your-webhook-secret

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# Telegram
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_BOT_USERNAME=razgazdayson_bot
TELEGRAM_WEBHOOK_URL=https://razgazdayson.ru/webhook
TELEGRAM_WEBAPP_URL=https://razgazdayson.ru/app

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@razgazdayson.ru

# Payment
PAYMENT_PROVIDER_TOKEN=your-payment-token
STRIPE_SECRET_KEY=sk_live_your-stripe-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
PROMETHEUS_ENABLED=true
GRAFANA_API_KEY=your-grafana-api-key

# Rate Limiting
RATE_LIMIT_PER_USER_DAILY=1000
RATE_LIMIT_GLOBAL_HOURLY=50000
FREE_DAILY_LIMIT=1

# Storage
UPLOAD_PATH=/var/uploads
MAX_UPLOAD_SIZE=10485760

# Feature Flags
ENABLE_VOICE_MESSAGES=true
ENABLE_DEEP_ANALYSIS=true
ENABLE_REFERRAL_PROGRAM=true
ENABLE_PUSH_NOTIFICATIONS=true

# Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
YANDEX_METRIKA_ID=12345678
AMPLITUDE_API_KEY=your-amplitude-key

# CDN
CDN_URL=https://cdn.razgazdayson.ru
CLOUDFLARE_API_TOKEN=your-cloudflare-token

# Backup
BACKUP_ENABLED=true
BACKUP_S3_BUCKET=razgazdayson-backups
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret
AWS_REGION=eu-west-1