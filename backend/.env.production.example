# Project
PROJECT_NAME=Razgazdayson
VERSION=1.0.0
ENVIRONMENT=production
DEBUG=False

# Security
SECRET_KEY=change-this-to-very-secure-random-string-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
ALLOWED_ORIGINS=["https://razgazdayson.ru","https://www.razgazdayson.ru"]
ALLOWED_HOSTS=["razgazdayson.ru","www.razgazdayson.ru","api.razgazdayson.ru"]

# Database
POSTGRES_USER=razgazdayson
POSTGRES_PASSWORD=change-this-to-secure-password
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=razgazdayson

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=change-this-to-secure-password

# OpenAI
OPENAI_API_KEY=sk-proj-your-production-api-key
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# Rate Limiting
RATE_LIMIT_PER_USER_DAILY=1000
RATE_LIMIT_GLOBAL_HOURLY=50000

# Monitoring
SENTRY_DSN=your-sentry-dsn-for-production
ENABLE_METRICS=True

# Telegram
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_WEBHOOK_URL=https://razgazdayson.ru/webhook
TELEGRAM_WEBHOOK_SECRET=generate-secure-webhook-secret

# Email (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@razgazdayson.ru
SMTP_PASSWORD=your-smtp-password

# Subscriptions
FREE_DAILY_LIMIT=1
TRIAL_DAYS=3

# File uploads
MAX_UPLOAD_SIZE=10485760
ALLOWED_AUDIO_FORMATS=["mp3","wav","ogg","m4a"]

# Production specific
LOG_LEVEL=INFO
WORKERS=4
WORKER_CONNECTIONS=1000